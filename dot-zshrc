export PATH="$HOME/bin:$HOME/.local/bin:/usr/local/bin:$PATH"
export ZSH="$HOME/.oh-my-zsh"

ZSH_THEME="mytheme"
HYPHEN_INSENSITIVE="true"
COMPLETION_WAITING_DOTS="true"
HIST_STAMPS="yyyy-mm-dd"

# ENABLE_CORRECTION="true"
unsetopt correct_all  
setopt correct

zstyle ':omz:update' mode auto
# zstyle ':omz:update' frequency 13

plugins=(git colored-man-pages fancy-ctrl-z)
source /usr/share/zsh/plugins/zsh-autosuggestions/zsh-autosuggestions.zsh
source /usr/share/zsh/plugins/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh

export ZSH_COMPDUMP="$ZSH/cache/.zcompdump-$HOST"
export SONARLINT_USER_HOME="$HOME/.cache/sonarlint"

source $ZSH/oh-my-zsh.sh

eval "`fnm env`"

find() {
  command find "$@" 2> >(grep -v 'Permission denied' >&2)
}

DOTFILES_DIR="$HOME/.local/share/dotfiles"
dotfiles-remove() {
  (cd $DOTFILES_DIR && stow --dotfiles -D -t $HOME .)
}
dotfiles-apply() {
  dotfiles-remove
  (cd $DOTFILES_DIR && stow --dotfiles -t $HOME . --adopt)
}

link-contents() {
  if [ ! -d $1 ]; then
    echo "Directory not found: $1"
    return 1
  fi
  for file in $1/*; do
    ln -s $file $2
  done
}

alias open="xdg-open"
alias zshconfig="open ~/.zshrc"
alias zshreload="source ~/.zshrc"
alias cat="bat"
alias top="htop"
alias cdesk="cd ~/Desktop"

sync_projects="$HOME/bin/hooks/sync-projects"
alias regenerate-front="$sync_projects/flyway e2e.sh"
alias regenerate-back="$sync_projects/flyway e2eBack.sh"
alias regenerate-db="$sync_projects/flyway regenerateDB.sh"
alias populate-front="$sync_projects/flyway simpleE2e.sh"
alias populate-back="$sync_projects/flyway simpleBackE2e.sh"
alias truncate-tenant="$sync_projects/truncate"
